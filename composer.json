{
    "name": "ilyamur/hangman-game",
    "description": "CLI version of popular table game",
    "autoload": {
        "psr-4": {
            "Ilyamur\\HangmanGame\\": "src/"
        },
        "files": [
            "config/config.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ilyamur\\HangmanGame\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/hangman"],
    "authors": [{
        "name": "Ilya Mur",
        "email": "ilyamur@hotmail.com"
    }],
    "require": {
        "jfcherng/php-color-output": "^3.0",
        "symfony/console": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    }
}
